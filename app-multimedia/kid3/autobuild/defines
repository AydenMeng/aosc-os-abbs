PKGNAME=kid3
PKGDES="An MP3, Ogg/Vorbis and FLAC tag editor, for KDE"
PKGSEC=sound
PKGDEP="chromaprint id3libs taglib docbook-xsl kio ffmpeg gstreamer"
BUILDDEP="extra-cmake-modules"

ABTYPE=cmakeninja
CMAKE_AFTER="-DWITH_APPS='CLI;Qt;KDE' \
             -DWITH_GSTREAMER=ON \
             -DWITH_FFMPEG=ON \
             -DWITH_LIBDIR=lib \
             -DBUILD_WITH_QT6=OFF"
