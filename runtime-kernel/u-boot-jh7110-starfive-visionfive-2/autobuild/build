abinfo "Building OpenSBI ..."
make PLATFORM=generic FW_TEXT_START=0x40000000

abinfo "Building U-Boot ..."
cd "$SRCDIR"/../u-boot/
make starfive_visionfive2_defconfig
make OPENSBI=../opensbi/build/platform/generic/firmware/fw_dynamic.bin

abinfo "Installing U-Boot ..."
install -Dm644 "$SRCDIR"/../u-boot/spl/u-boot-spl.bin.normal.out "$PKGDIR/usr/lib/$PKGNAME/u-boot-spl.bin.normal.out"
install -Dm644 "$SRCDIR"/../u-boot/u-boot.itb "$PKGDIR/usr/lib/$PKGNAME/u-boot.itb"
