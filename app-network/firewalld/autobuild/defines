PKGNAME=firewalld
PKGSEC=net
PKGDEP="dbus-glib dconf ipset nftables iptables slip python-3 \
        dbus-python pygobject-3 libcap-ng debconf"
PKGSUG="bash-completion gtk-3 libnotify pyqt5 hicolor-icon-theme \
        network-manager-applet"
BUILDDEP="docbook-xsl doxygen intltool ${PKGSUG}"
PKGDES="A dynamically managed firewall with support for network/firewall zones"

ABTYPE=autotools
ABSHADOW=0
AUTOTOOLS_AFTER="--enable-docs \
                 --enable-systemd \
                 --enable-sysconfig \
                 --disable-rpmmacros \
                 --enable-nls \
                 PYTHON=/usr/bin/python3"

ABHOST=noarch
